<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Quiz</title>
	<meta name="viewport" content="width=device-width", initial-scale="1.0">
	<link rel='stylesheet' href='/stylesheets/style.css'>
	  <link rel='stylesheet' media='screen and (min-device-width: 600px) and (min-width: 800px)' href="/stylesheets/wide.css" /> 
	<link rel='stylesheet' media='screen (max-width: 480px)' href="/stylesheets/smartphone.css" />

</head>
<body id="page">
	<header class="main" id="mainHeader">
		 <div class="right">
            <% if (!session.user) { %>
                <a href="/users/new">Register</a>
                <a href="/session">Login</a>
            <% } else { %>
                <a href="/users/<%= session.user.id %>"><%= session.user.username %></a>
                <a href="/session?_method=DELETE">Logout</a>
            <% } %>
        </div>

		<h2>
			<span class="no-narrow">The</span>
			Quiz 
			<span class="no-narrow">Site</span>
		</h2>
	</header>
<nav class="main" id="mainNav" role="navigation">
	<a href="/"> Home </a>
	<a href="/quizzes">Quizzes</a>
	<a href="/author">Author</a>
	<a href="/users"> Users</a>
</nav>
<section class="main" id="mainSection">
		<% if (messages.info){ %>
		<article id='flashinfo'>
			<h3>Information of interest:</h3>
			<ul>
				<% for(var i in messages.info) { %>
				<li> <%= messages.info[i] %> </li>
				<% } %>
			</ul>
		</article>
		<% } %> 

		<% if (messages.success){ %>
		<article id='flashsuccess'>
			<h3>Task completed successfully:</h3>
			<ul>
				<% for(var i in messages.success) { %>
				<li> <%= messages.success[i] %> </li>
				<% } %>
			</ul>
		</article>
		<% } %>

		<% if (messages.error){ %>
		<article id='flasherror'>
			<h3>Errors:</h3>
			<ul>
				<% for(var i in messages.info) { %>
				<li> <%= messages.error[i] %> </li>
				<% } %>
			</ul>
		</article>
		<% } %>

		


		<%- body %>

		<% if(locals.paginate_control){ %>
		<%- paginate_control %>
		<%}%>

</section>
<footer class="main" id="mainFooter">
	<a href="http://dveni.github.io">Check my website!</a>
</footer>

</body>
</html>